<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_margin="20dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        >



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:src="@drawable/logo"
        />

    <TextView
        android:id="@+id/txtAddNewProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SignUp  As "
        android:gravity="center"
        android:textColor="@color/light_black"
        android:textSize="25dp"
        android:fontFamily="@font/orelega_one_regular"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSeller"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I am Seller"
        android:fontFamily="@font/orelega_one_regular"
        android:background="@drawable/back_default"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBuyer"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I am Buyer"
        android:fontFamily="@font/orelega_one_regular"
        android:background="@drawable/back_default"
        />

    </LinearLayout>
</androidx.cardview.widget.CardView>