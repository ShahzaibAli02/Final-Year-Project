<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="80dp"

        >


        <TextView
            android:id="@+id/txtStoreName"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#555454"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:text="Select Store"
            android:layout_marginLeft="20dp" />



        <Spinner
            android:id="@+id/SpinnerStoreName"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_default"
            android:gravity="center" />



        <TextView
            android:id="@+id/txtStoreDisc"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#555454"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:text="Request Description"
            android:layout_marginLeft="20dp" />



        <EditText
            android:id="@+id/editTextStoreDesc"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/back_default"
            android:hint="Write Your Request Here ...."
            android:padding="10dp"
            android:gravity="start" />


        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#555454"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:text="Your Name"
            android:layout_marginLeft="20dp" />



        <EditText
            android:id="@+id/editTextName"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/back_default"
            android:hint="Shahzaib Ali"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingLeft="10dp" />


        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="18dp"
            android:textColor="#555454"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:text="Email"
            android:layout_marginLeft="20dp" />



        <EditText
            android:id="@+id/editTextEmail"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/back_default"
            android:hint="someone@gmail.com"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingLeft="10dp" />


        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="18dp"
            android:textColor="#555454"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:text="Phone Number"
            android:layout_marginLeft="20dp" />



        <EditText
            android:id="@+id/editTextPhone"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/back_default"
            android:hint="+00000000"
            android:inputType="phone"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingLeft="10dp" />








        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSendRequest"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Send Request"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/back_blue"
            />

    </LinearLayout>
</ScrollView>